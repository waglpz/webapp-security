{
  "name": "waglpz/webapp-security",
  "description": "Web App Security Implementation",
  "license": "MIT",
  "type": "library",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "apcu-autoloader": true,
    "discard-changes": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  },
  "bin": [
    "bin/generate-password.php"
  ],
  "require": {
    "php": "^8.2",
    "ext-apcu": "*",
    "ext-fileinfo": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-mysqli": "*",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "adhocore/jwt": "^1.1",
    "psr/http-message": "^1.0"
  },
  "require-dev": {
    "doctrine/coding-standard": "^9.0",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan": "^1.5",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/phpstan-doctrine": "^1.3",
    "phpstan/phpstan-phpunit": "^1.1",
    "phpstan/phpstan-strict-rules": "^1.1",
    "phpstan/phpstan-symfony": "^1.1",
    "phpstan/phpstan-webmozart-assert": "^1.1",
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.6",
    "symfony/var-dumper": "^5.4"
  },
  "conflict": {
  },
  "autoload": {
    "psr-4": {
      "Waglpz\\Webapp\\Security\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Waglpz\\Webapp\\Security\\Tests\\": "tests/"
    }
  },
  "replace": {
  },
  "scripts": {
    "waglpz:check:ci": [ "@waglpz:check:normal" ],
    "waglpz:check:normal": [
      "@waglpz:code:style:check",
      "@waglpz:code:analyse",
      "@waglpz:test:normal"
    ],
    "waglpz:code:analyse": [ "phpstan analyse --configuration=phpstan.neon bin/ config/ src/ tests/ --level max" ],
    "waglpz:code:style:check": "phpcs -p",
    "waglpz:code:style:fix": "phpcbf -p",
    "waglpz:generate:password": "php bin/generate-password.php",
    "waglpz:test:normal": "phpunit --colors=always tests",
    "post-install-cmd": [
      "cp -n config/firewall.php config/"
    ],
    "post-update-cmd": [
      "cp -n config/firewall.php config/"
    ]
  }
}
